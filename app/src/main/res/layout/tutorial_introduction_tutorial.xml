<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

<ScrollView
    android:id="@+id/sc1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <RelativeLayout
      android:id="@+id/rel1"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">
    <TextView
        android:id="@+id/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:textStyle="bold"
        android:text="What is Android?"
        android:textColor="@color/interview_que_color"
        android:textSize="22dp" />

    <TextView
        android:id="@+id/intro1"
        android:layout_below="@+id/android"
        android:text="What is Android?"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/view"
        android:layout_below="@+id/intro1"
        android:background="#090909"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <TextView
        android:id="@+id/ss"
        android:layout_below="@+id/view"
        android:text="Android Software Stack :"
        android:layout_margin="10dp"
         android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/interview_que_color"
        android:textSize="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/ads"
                android:layout_below="@+id/ss"
                android:layout_margin="20dp"
                android:background="@drawable/androidsoftwarestack"
                android:layout_width="400dp"
                android:layout_height="400dp" />

  </RelativeLayout>
</ScrollView>
</RelativeLayout>