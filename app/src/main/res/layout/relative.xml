<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/li1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/json2"
                android:layout_margin="10dp"
                android:text="Android RelativeLayout enables you to specify how child views are positioned relative to each other. The position of each view can be specified as relative to sibling elements or relative to the parent."
                android:textColor="#090909"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/li1"
               android:layout_centerHorizontal="true"
                android:background="@drawable/relativedemodemo" />

            <TextView
                android:id="@+id/li2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img"
                android:layout_margin="10dp"
                android:text="RelativeLayout Attributes"
                android:textColor="@color/interview_que_color"
                android:textSize="22dp" />

            <TextView
                android:id="@+id/li3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/li2"
                android:layout_margin="10dp"
                android:text="demo"
                android:textColor="#090909"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/li4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/li3"
                android:layout_margin="10dp"
                android:text="Using RelativeLayout, you can align two elements by right border, or make one below another, centered in the screen, centered left, and so on. By default, all child views are drawn at the top-left of the layout, so you must define the position of each view using the various layout properties available from RelativeLayout.LayoutParams and few of the important attributes are given below âˆ’"
                android:textColor="#090909"
                android:textSize="20dp" />


            <TextView
                android:id="@+id/li5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_below="@+id/li4"
                android:layout_margin="10dp"
                android:textColor="#090909"
                android:textSize="20dp" />
        </RelativeLayout>

    </ScrollView>

</RelativeLayout>