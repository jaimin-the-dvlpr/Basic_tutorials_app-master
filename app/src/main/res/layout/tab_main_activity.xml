            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/main"
                android:layout_margin="5dp"
                android:text="hello"
                android:textColor="#fff"
                android:textSize="17dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </ScrollView>
    </HorizontalScrollView>




</RelativeLayout>